{% extends 'base.html.twig' %}

{% block title %}Mis Tareas{% endblock %}

{% block body %}
<div class="row mb-4">
    <div class="col-md-8">
        <h1><i class="bi bi-list-task"></i> Mis Tareas</h1>
        <p class="text-muted">Gestion de tareas</p>
    </div>
    <div class="col-md-4 text-end">
        <a href="{{ path('task_new') }}" class="btn btn-primary btn-lg">
            <i class="bi bi-plus-circle"></i> Nueva Tarea
        </a>
    </div>
</div>

{% if tasks|length == 0 %}
    <div class="alert alert-info text-center py-5">
        <i class="bi bi-inbox" style="font-size: 3rem;"></i>
        <h4 class="mt-3">No tienes tareas aún</h4>
        <p>Comienza creando tu primera tarea</p>
        <a href="{{ path('task_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Crear Primera Tarea
        </a>
    </div>
{% else %}
    <div class="row">
        {% for task in tasks %}
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card task-card h-100 {% if task.isCompleted %}border-success{% endif %}">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <h5 class="card-title {% if task.isCompleted %}task-completed{% endif %}">
                            {{ task.title }}
                        </h5>
                        {% if task.isCompleted %}
                            <span class="badge bg-success">
                                <i class="bi bi-check-circle"></i> Completada
                            </span>
                        {% else %}
                            <span class="badge bg-warning text-dark">
                                <i class="bi bi-clock"></i> Pendiente
                            </span>
                        {% endif %}
                    </div>
                    
                    {% if task.description %}
                        <p class="card-text text-muted {% if task.isCompleted %}task-completed{% endif %}">
                            {{ task.description|length > 100 ? task.description|slice(0, 100) ~ '...' : task.description }}
                        </p>
                    {% else %}
                        <p class="card-text text-muted"><em>Sin descripción</em></p>
                    {% endif %}
                    
                    <p class="card-text">
                        <small class="text-muted">
                            <i class="bi bi-calendar"></i> 
                            {{ task.createdAt|date('d/m/Y H:i') }}
                        </small>
                    </p>
                </div>
                
                <div class="card-footer bg-transparent">
                    <div class="btn-group w-100" role="group">
                        <a href="{{ path('task_show', {'id': task.id}) }}" class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-eye"></i>
                        </a>
                        <a href="{{ path('task_edit', {'id': task.id}) }}" class="btn btn-sm btn-outline-secondary">
                            <i class="bi bi-pencil"></i>
                        </a>
                        
                        <form method="post" action="{{ path('task_toggle', {'id': task.id}) }}" class="d-inline">
                            <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ task.id) }}">
                            <button class="btn btn-sm btn-outline-{% if task.isCompleted %}warning{% else %}success{% endif %}" type="submit">
                                <i class="bi bi-{% if task.isCompleted %}arrow-counterclockwise{% else %}check{% endif %}"></i>
                            </button>
                        </form>
                        
                        <form method="post" action="{{ path('task_delete', {'id': task.id}) }}" class="delete-form d-inline">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ task.id) }}">
                            <button class="btn btn-sm btn-outline-danger" type="submit">
                                <i class="bi bi-trash"></i>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>

    <div class="mt-4">
        <div class="card">
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-md-4">
                        <h3>{{ tasks|length }}</h3>
                        <p class="text-muted">Total de Tareas</p>
                    </div>
                    <div class="col-md-4">
                        <h3 class="text-success">
                            {{ tasks|filter(t => t.isCompleted)|length }}
                        </h3>
                        <p class="text-muted">Completadas</p>
                    </div>
                    <div class="col-md-4">
                        <h3 class="text-warning">
                            {{ tasks|filter(t => not t.isCompleted)|length }}
                        </h3>
                        <p class="text-muted">Pendientes</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endif %}
{% endblock %}